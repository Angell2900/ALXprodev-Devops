#!/bin/bash
FILE="data.json"

# Extract Pok√©mon data
name=$(jq -r '.name' "$FILE" | sed 's/\b\(.\)/\u\1/')
type=$(jq -r '.types[0].type.name' "$FILE" | sed 's/\b\(.\)/\u\1/')
weight=$(jq -r '.weight' "$FILE")
height=$(jq -r '.height' "$FILE")

# Format weight and height using awk
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')

# Print exact required human-readable sentence
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
